<resources>
    <style name="anchoImagen">113dp</style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="txtBoxStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textColorHighlight">@color/colorSecondaryText</item>
        <item name="android:textColorHint">@color/colorSecondaryText</item>
    </style>
    <style name="defaultButtonStyle">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>
    <style name="defaultImageStyle">
        <item name="layout_width">@styles/anchhoImagen</item>

    </style>
</resources>
